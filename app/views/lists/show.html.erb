<%# Navigation %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"></a>
    <%= link_to 'New List', new_list_path, class: "btn btn-outline-success my-2 my-sm-0 ms-2" %>
    <%= link_to 'My Lists', lists_path, class: "btn btn-outline-success my-2 my-sm-0 ms-2" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="ms-auto flex">
        <form class="d-flex my-2 my-lg-0">
          <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </div>
  </div>
</nav>

<%# movie details:  %>
<h1><%= @list.name %></h1>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <li class="list-group-item">
      <strong>Title:</strong> <%= movie.title %>
      <br>
      <strong>Overview:</strong> <%= movie.overview %>
      <br>
      <strong>Poster Link:</strong> <%= movie.poster_url %>
      <br>
      <strong>Rating:</strong> <%= movie.rating %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-success my-2 my-sm-0 ms-2" %></p>

 <%= link_to "Delete this list", list_path(@list), class: "btn btn-success my-2 my-sm-0 ms-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
