<%# Navigation %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid d-flex justify-content-end" >
    <a class="navbar-brand" href="#"></a>
    <%= link_to 'New List', new_list_path, class: "btn btn-outline-success my-2 my-sm-0 ms-2" %>
    <%= link_to 'My lists', lists_path, class: "btn btn-outline-success my-2 my-sm-0 ms-2" %>
  </div>
</nav>

<%# Banner %>
<div class="cover d-flex align-items-center justify-content-center mb-4 logo">

    <div class="text-center text-white">
      <h1>Save any kind of movies</h1>
    </div>
</div>

<%# green button of create movies %>
<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3>My Lists of Movies</h3>
    <%= link_to "Create a movie list", new_list_path(@list), class: "btn btn-success my-2 my-sm-0 ms-2" %>
  </div>
</div>

<%# lists of movies %>
<ul>
  <% @lists.each do |list| %>
    <div class="card-flower-bg-m-3" style="width: 300px, height: 300px" >
      <div class="d-flex justify-content-center"><%= link_to list.name, list_path(list), class:"text-decoration-none" %>
  <% end %>
</ul>

