<div class="cover d-flex align-items-center justify-content-center mb-4">
  <div class="text-center text-white">
   <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3>My Lists of Movies</h3>
    <%= link_to "Create a movie list", new_list_path(@list), class: "btn btn-primary"%>
  </div>
</div>



<ul>
  <% @lists.each do |list| %>
    <div class="co-12 col-sm-6 col-md-4 mb-3">
      <%= link_to list.name, list_path(list), class:"text-decoration-none" %>
        <%# <div class="card-category", style = "url(<%= asset_path('list_background.jpg') %>)"> %>
  <% end %>
</ul>
